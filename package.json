{
  "name": "prophet",
  "version": "1.0.0",
  "private": true,
  "description": "marketing database",
  "keywords": [
    "marketing",
    "database",
    "crm"
  ],
  "homepage": "https://github.com/c-e-daly/prophet#readme",
  "bugs": {
    "url": "https://github.com/c-e-daly/prophet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c-e-daly/prophet.git"
  },
  "license": "ISC",
  "author": "cedaly",
  "type": "module",
  "main": "vite.config.js",
  "workspaces": {
    "packages": [
      "extensions/*"
    ]
  },
  "scripts": {
    "build": "prisma generate && remix build",
    "dev": "remix dev --manual",
    "config:link": "shopify app config link",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve ./build/server/index.js",
    "docker-start": "npm run setup && npm run start",
    "setup": "prisma generate && prisma migrate deploy",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "graphql-codegen": "graphql-codegen",
    "migrate": "DATABASE_URL=$MIGRATION_DATABASE_URL npx prisma migrate deploy",
    "vite": "vite",
    "typecheck" : "tsc"
  },
  "dependencies": {
    "@highcharts/map-collection": "^2.3.1",
    "@prisma/client": "^6.14.0",
    "@remix-run/dev": "^2.16.1",
    "@remix-run/fs-routes": "^2.16.1",
    "@remix-run/node": "^2.16.1",
    "@remix-run/react": "^2.16.1",
    "@remix-run/serve": "^2.16.1",
    "@shopify/app-bridge-react": "^4.1.6",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-app-remix": "^3.7.0",
    "@shopify/shopify-app-session-storage": "^3.0.20",
    "@shopify/shopify-app-session-storage-prisma": "^6.0.9",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@vercel/analytics": "^1.5.0",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "highcharts": "^12.3.0",
    "highcharts-react-official": "^3.2.2",
    "isbot": "^5.1.0",
    "prisma": "^6.14.0",
    "react": "^18.2.0",
    "react-date-range": "^2.0.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.7.1",
    "react-select": "^5.10.2",
    "recharts": "^3.1.0",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.16.1",
    "@remix-run/route-config": "^2.16.1",
    "@shopify/api-codegen-preset": "^1.1.1",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.2.0",
    "@types/react-date-range": "^1.4.10",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.2.4",
    "typescript": "^5.8.3",
    "vite": "^6.2.2"
  },
  "engines": {
    "node": "^18.20 || ^20.10 || >=21.0.0"
  },
  "overrides": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5",
    "vite": "^6.2.2"
  },
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "resolutions": {
    "@graphql-tools/url-loader": "8.0.16",
    "@graphql-codegen/client-preset": "4.7.0",
    "@graphql-codegen/typescript-operations": "4.5.0",
    "minimatch": "9.0.5",
    "vite": "^6.2.2"
  }
}
