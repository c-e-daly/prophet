<!-- iwt modal button block is the primary consumer tool to start the offer process -->
{% render 'iwt-offer-modal' %}
{% render 'iwt-offer-button' %}


{% schema %}
  {
    "name": "I Want That!",
    "javascript": "iwt-offer-management.min.js",
    "templates": ["product", "cart"],
    "target": "section",
    "settings": 
    [{
      "type": "text",
      "id": "button_width",
      "label": "Button Width",
      "default": "100%",
      "info": "Set the width of the 'I Want That!' button (e.g., 100px, 50%, etc.)"
    },
    {
      "type": "text",
      "id": "button_radius",
      "label": "Button Border Radius",
      "default": "5px",
      "info": "Set the border radius of the button (e.g., 5px, 50%, etc.)"
    }
    ]
  }

{% endschema %}